<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".activities.Regioes">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="130dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >

            <ImageButton
                android:id="@+id/btn_primeiro"
                android:layout_width="130dp"
                android:layout_height="117dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/costa_verde"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/btn_segundo"
                android:layout_width="130dp"
                android:layout_height="117dp"
                android:background="@drawable/rjcapital"
                android:contentDescription="TODO" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="80dp"
                android:text="@string/txt1"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/txt2"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginStart="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >

            <ImageButton
                android:id="@+id/btn_terceiro"
                android:layout_width="130dp"
                android:layout_height="117dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/regiaoserrana1"
                android:contentDescription="TODO" />

            <ImageButton
                android:id="@+id/btn_quarto"
                android:layout_width="130dp"
                android:layout_height="117dp"
                android:background="@drawable/regiaodoslagos"
                android:contentDescription="TODO" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/txt3"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"/>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/txt4"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>