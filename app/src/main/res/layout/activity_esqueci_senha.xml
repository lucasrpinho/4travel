<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activities.esqueciSenha">

    <TextView
       android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite o email"
        android:textSize="20dp"
        android:layout_marginTop="50dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnResetar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_Senha"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="111dp"
        android:backgroundTint="#37599C"
        android:gravity="center"
        android:text="Resetar Senha"
        android:textSize="20dp" />

</RelativeLayout>