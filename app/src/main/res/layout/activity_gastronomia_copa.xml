            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:textColor="@color/black"
            android:text="@string/eclipsedescricao"/>

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnEclipse"
