            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:textColor="@color/black"
            android:text="@string/paociadescricao" />

        <ImageButton
            android:layout_width="30sp"
            android:id="@+id/btnPaoCia"
            android:layout_height="30sp"
            android:layout_marginStart="200sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnPaoCiaNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <ImageView
            android:layout_width="130dp"
            android:layout_marginStart="10dp"
            android:layout_height="130dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/pergula"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/pergula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
