<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.gastronomiaRecreio"
    android:background="@drawable/travelbackgroundpng2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:isScrollContainer="true">

        <TextView
            android:id="@+id/gastronomiaRecreio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="17dp"
            android:text="@string/gastronomiaRecreio"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="130dp"
            android:layout_marginStart="10dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/reidorecreio"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/reidorecreio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="-133dp"
            android:text="@string/reidorecreio"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:textColor="@color/black"
            android:text="@string/reidorecreiodescricao" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnReiManha"
            android:layout_height="35sp"
            android:layout_marginStart="165sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnReiAlmoço"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="230sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/vespertino" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnReiNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <ImageView
            android:layout_width="130dp"
            android:layout_marginStart="10dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/nabrasa"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/nabrasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="-133dp"
            android:text="@string/na_brasa_columbia"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:textColor="@color/black"
            android:text="@string/descricaoNaBrasa" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnNabrasaManha"
            android:layout_height="35sp"
            android:visibility="invisible"
            android:layout_marginStart="130sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnNabrasaAlmoço"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="200sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/vespertino" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnNabrasaNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <ImageView
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/riosul"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/riosul"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:layout_marginTop="-133sp"
            android:text="@string/riosul"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:textColor="@color/black"
            android:text="@string/descricaoRioSul"/>

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnRioSulManha"
            android:layout_height="35sp"
            android:visibility="invisible"
            android:layout_marginStart="130sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnRioSulAlmoço"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="200sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/vespertino" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnRioSulNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <ImageView
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/bahamassteak"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bahamas"
            android:layout_marginStart="145sp"
            android:layout_marginTop="-133sp"
            android:text="@string/bahamas"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:textColor="@color/black"
            android:text="@string/descricaobahamas"/>

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnBahamasManha"
            android:layout_height="35sp"
            android:visibility="invisible"
            android:layout_marginStart="130sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnBahamasAlmoço"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="200sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/vespertino" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnBahamasNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <ImageView
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/kacua"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:layout_marginTop="-133sp"
            android:text="@string/kacua"
            android:id="@+id/kacua"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:textColor="@color/black"
            android:text="@string/descricaokacua"/>

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnKacuaManha"
            android:layout_height="35sp"
            android:visibility="invisible"
            android:layout_marginStart="130sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnKacuaAlmoço"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="200sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/vespertino" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnKacuaNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <ImageView
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/parme"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:layout_marginTop="-133sp"
            android:id="@+id/parme"
            android:text="@string/parme"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:textColor="@color/black"
            android:text="@string/descricaoparme"/>

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnParmeManha"
            android:layout_height="35sp"
            android:visibility="invisible"
            android:layout_marginStart="130sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnParmeAlmoço"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="200sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/vespertino" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnParmeNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <ImageView
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/riozen"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:id="@+id/riozen"
            android:layout_marginTop="-133sp"
            android:text="@string/riozen"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="145sp"
            android:textColor="@color/black"
            android:text="@string/descricaoriozen"/>

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnRiozenManha"
            android:layout_height="35sp"
            android:visibility="invisible"
            android:layout_marginStart="130sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/matinal" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnRiozenVespertino"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="200sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/vespertino" />

        <ImageButton
            android:layout_width="35sp"
            android:id="@+id/btnRioZenNoturno"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:layout_marginStart="300sp"
            android:layout_marginTop="-35sp"
            android:background="@drawable/noturno" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/nextScreen"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="40sp"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:backgroundTint="#174280"
            android:text="AVANÇAR"/>




    </LinearLayout>

</ScrollView>